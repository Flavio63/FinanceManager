<UserControl x:Class="FinanceManager.Views.ManagerReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:is="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:iy="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" Name="_ManagerReportsView"
             xmlns:local="clr-namespace:FinanceManager.Views"
             d:DesignHeight="650" >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="3" Text="Gestione dei Report" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="X" Command="{Binding CloseMeCommand}" 
                CommandParameter="{Binding ElementName=_ManagerReportsView}" 
                HorizontalContentAlignment="Center" Grid.Column="2" HorizontalAlignment="Right"
                    VerticalContentAlignment="Center" Width="25" Height="25" Background="LightGray" 
                Margin="0,0, 15, 0"></Button>
        
        <!-- Parametri comuni da selezionare -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="LightGray" BorderThickness="0.8" Margin="5">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Parametri Comuni da Selezionare" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="3, 2, 3, 7"/>
                <TextBlock Grid.Row="1" Text="Le Gestioni" FontSize="16" Margin="0, 2, 5, 2" VerticalAlignment="Center"/>
                <ListBox Name="Conto" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding OwnerList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          SelectedValuePath="Id_gestione" DisplayMemberPath="Nome_Gestione" Margin="5, 2" MinWidth="100" Height="75" SelectionMode="Multiple">
                    <iy:Interaction.Triggers>
                        <iy:EventTrigger EventName="SelectionChanged">
                            <is:CallMethodAction TargetObject="{Binding}" MethodName="CbSelectionChanged"/>
                        </iy:EventTrigger>
                    </iy:Interaction.Triggers>
                </ListBox>
                <TextBlock Grid.Row="2" Text="Anni disponibili" FontSize="16" Margin="0, 2, 5, 2" VerticalAlignment="Center"/>
                <ListBox Name="Anni" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding AvailableYears}"
                          Margin="5, 2" MinWidth="100" Height="75">
                    <iy:Interaction.Triggers>
                        <iy:EventTrigger EventName="SelectionChanged">
                            <is:CallMethodAction TargetObject="{Binding}" MethodName="CbSelectionChanged"/>
                        </iy:EventTrigger>
                    </iy:Interaction.Triggers>
                </ListBox>
                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center">
                    <Button Name="btnViewReport" Content="Visualizza" Margin="15,10, 5, 10" Width="90" FontSize="14" FontWeight="Bold"
                             Command="{Binding ViewCommand}" CommandParameter="{Binding ElementName=BackgroundReport}"/>

                    <Button Name="btnExportReport" Content="Esporta" Margin="5, 10, 5, 10" Width="90" FontSize="14" FontWeight="Bold"
                             />

                    <Button Name="btnClearReport" Content="Pulisci" Margin="5, 10, 15, 10" Width="90" FontSize="14" FontWeight="Bold"
                             Command="{Binding ClearCommand}" CommandParameter="{Binding ElementName=BackgroundReport}"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Parametri scelta report -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" BorderThickness="0.8" Margin="5">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Scelta Report" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="3, 2, 3, 7"/>
                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5" VerticalAlignment="Top">
                    <CheckBox Content="Profit Loss" HorizontalAlignment="Left" VerticalAlignment="Top" 
                              FontSize="20" Margin="5" VerticalContentAlignment="Center"/>
                    <CheckBox Content="Delta per Anno" HorizontalAlignment="Left" VerticalAlignment="Top" 
                              FontSize="20" Margin="5" VerticalContentAlignment="Center"/>
                    <CheckBox Content="Conto Scalare" HorizontalAlignment="Left" VerticalAlignment="Top"
                              FontSize="20" Margin="5" VerticalContentAlignment="Center"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
