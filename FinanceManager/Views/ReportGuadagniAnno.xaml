<UserControl x:Class="FinanceManager.Views.ReportGuadagniAnno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceManager.Views"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="#FFDC8200" Background="#FFE60000" BorderThickness="2" CornerRadius="15">
            <TextBlock Text="{Binding Desc_Anno}" FontWeight="Bold" FontSize="18" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Name="ReportAnno" Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="DarkSlateGray" CornerRadius="15" MinHeight="100" MinWidth="100"/>
    </Grid>
</UserControl>
